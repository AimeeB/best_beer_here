#twitter-feed
  .col_2
    %h2 Tweets with "craft beer" or "#craftbeer"
    - @tweets = BeerTweet.get_search_tweets
    - @tweets.each do |tweet|
      %ul.tweet
        %li.tweet-user
          = auto_link("@" + tweet[:user]).html_safe
        %li.tweet-content
          = auto_link(tweet[:tweet_content]).html_safe
        %li.tweet_time
          = tweet[:tweet_time].strftime('%B %e, %Y at %l:%M:%S%P')
